<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
    <h3>Create new listing</h3>
    <form method="post" action="/listings">
        <div class="mb-3">
            <label for="title" class="form-label">Title</label>
            <input name="listing[title]" placeholder="Add a catchy title" class="form-control">
        </div>
        <div class="mb-3">
            <label for="description" class="form-label">Description</label>
            <textarea name="listing[description]"  placeholder="enter description" type="text" class="form-control"></textarea>
        </div>
        <div class="mb-3">
            <label for="image" class="form-label">Image link</label>
             <input name="listing[image]" placeholder="enter image link" class="form-control" type="text">
        </div>
        <div class="row">
           <div class="mb-3 col-md-4">
            <label for="price" class="form-label">Price</label>
            <input name="listing[price]" placeholder="1200" class="form-control" type="number">
           </div>
           <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country</label>
            <input name="listing[country]" placeholder="India"  class="form-control" type="text">
           </div>
       </div>
      
        <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input name="listing[location]"  placeholder="Kashmir" class="form-control" type="text">
        </div>
        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
    </div>
    </div>
</body>
